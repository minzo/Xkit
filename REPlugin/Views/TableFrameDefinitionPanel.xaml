<UserControl x:Class="REPlugin.Views.TableFrameDefinitionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.c
             om/expression/blend/2008" 
             xmlns:local="clr-namespace:REPlugin.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
    
        <DockPanel Grid.Column="0">
            <ListBox DockPanel.Dock="Left" ItemsSource="{Binding SourceDefinitionVMs}" DisplayMemberPath="Name" />
            <DataGrid ItemsSource="{Binding SourceDefinitionVMs/Elements}" />
        </DockPanel>

        <DockPanel Grid.Column="1">
            <ListBox DockPanel.Dock="Left" ItemsSource="{Binding TargetDefinitionVMs}" DisplayMemberPath="Name" />
            <DataGrid ItemsSource="{Binding TargetDefinitionVMs/Elements}" />
        </DockPanel>
    </Grid>
    
    
</UserControl>
